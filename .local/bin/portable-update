#!/usr/bin/env bash
#
#  - {:ONE_LINE_DESCRIPTION_HERE:}

function Realpath ()
{
  /usr/bin/perl '-MCwd(abs_path)' -le '$p=abs_path(join(q( ),@ARGV));print $p if -e $p' "$*"
}

function Portable-update()
{
  SCRIPTDIR="$(Realpath "$(dirname "$0")"/..)"
  git -C "${SCRIPTDIR}" pull
}

Portable-update
