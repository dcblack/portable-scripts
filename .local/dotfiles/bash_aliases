#!/bin/sh

alias ls='ls -BCF --color=always'
alias la='ls -A'
alias ll='ls -l'
alias m='less'
alias cls='clear'
alias vivado-setup='source "${APPS}"/xilinx/2020.1/Vivado/2020.1/settings64.sh'
export VI='vim'
alias vial='"${VI}" -f "${HOME}"/.bash_aliases; . "${HOME}"/.bash_aliases'
alias vibash='"${VI}" -f "${HOME}"/.bashrc; . "${HOME}"/.bashrc'
alias vienv='"${VI}" -f "${HOME}"/.bashenv; . "${HOME}"/.bashenv'
alias vifuncs='"${VI}" -f "${HOME}"/.bash_functions; . "${HOME}"/.bash_functions'
alias .alias='. "${HOME}"/.bash_aliases'
alias .bash='. "${HOME}"/.bashrc'
alias .env='. "${HOME}"/.bashenv'
alias .funcs='. "${HOME}"/.bash_functions'
alias aliases='alias | perl -pe "s/alias //;s/=.*//" | fmt'
alias funcs='declare -F|perl -pe "s/declare -f//;"|fmt'
alias tcpip='ifconfig | grep -i mask'
