#!/bin/bash

set -o vi

export FAVS LOCAL APPS LESS CXX CC CMAKE_VERSION CMAKE_BUILD EDITOR SYSTEMC_HOME
# Favorites
FAVS="${HOME}"/Favorites
mkdir -p "${FAVS}"
# Locations
LOCAL="${HOME}/.local"
APPS="${LOCAL}/apps"
SYSTEMC_HOME="${HOME}/.local/apps/systemc"
# Affect applications
LESS="-afrMRXj4x4"
CMAKE_VERSION="3.19"
CMAKE_BUILD="7"
# Change following if have and prefer clang
CC="gcc"
CXX="g++"
EDITOR="vim"
