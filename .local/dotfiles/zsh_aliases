alias sane='reset; stty erase ^H'
function hclr()
{
  cat /dev/null >~/"saved$1.history";
}
#-------------------------------------------------------------------------------
function hput()
{
  history -a >~/"saved$1.history";
}
function hget()
{
  history -n >~/"saved$1.history";
}
function hreduce()
{
  hunique -o ~/"saved$1.history";
}
#-------------------------------------------------------------------------------
function Ps()
{
  ps -p $$
}

function m()
{
  if [[ "$1" == '-nc' ]]; then
    env NOCOLOR=1 less "$@"
  else
    less "$@"
  fi
}

