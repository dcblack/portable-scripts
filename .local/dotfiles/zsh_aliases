function funcs()
{
  # shellcheck disable=SC2312
  declare -f | perl -lane 'print $F[0] if m{^[a-zA-Z]{2,} *[(][)]-' | fmt
}


alias ag=rg
function aga()
{
  # Search all files
  if builtin command -v rg 2>/dev/null 1>/dev/null; then
    rg 2>/dev/null -a -u --hidden "$@" || true
  else
    ag 2>/dev/null -a -u --hidden "$@" || true
  fi
}
function agl()
{
  # List filenames containing pattern
  if builtin command -v rg 2>/dev/null 1>/dev/null; then
    rg 2>/dev/null --files-with-matches --color=never "$@" | sort || true
  else
    ag 2>/dev/null -l --nocolor "$@" | sort || true
  fi
}
function agL()
{
  # List filenames not containing pattern
  if builtin command -v rg 2>/dev/null 1>/dev/null; then
    rg 2>/dev/null --files-without-match --color==never "$@" | sort || true
  else
    ag 2>/dev/null -L --nocolor "$@" | sort || true
  fi
}
function agx()
{
  if builtin command -v rg 2>/dev/null 1>/dev/null; then
    _do rg --color=never -No "$@"
  else
    _do ag --nocolor --nonumbers -o "$@"
  fi
}
alias rgx=agx
alias rgl=agl
alias rgL=agL
alias ag0='ag --depth=0'
alias ag1='ag --depth=1'
alias ag.='ag --depth=0 --hidden'
function agh()
{
  ag -t -s -w --hidden --depth 1 "$@"
}

function read_into_array() {
  # Usage: read_into_array ARRAY "COMMAND"
    local arr_name=$1
    local cmd="$2"

    eval "${arr_name}=()"
    # shellcheck disable=SC2312
    while IFS= read -r line; do
        eval "${arr_name}+=(\"${line}\")"
    done < <(eval "${cmd}")
}

function ssh2openssh()
{
  if [[ "$*" =~ ^-{1,2}h(elp)?$ ]]; then
    echo "
NAME
----

ssh2openssh - convert multiple line ssh2 public key to single line openssh format

SYNOPSIS
--------

ssh2openssh [KEYPATH/]KEYFILE

"
    return 0
  fi
  if [[ $# != 1 ]]; then
    Report_warning "Syntax requires specifying an ssh key"
    return 1
  fi
  local f
  if [[ "${f}" =~ .pub$ ]]; then
    f="${1/.pub}"
  else
    f="${1}"
  fi
  if [[ "${f}" =~ / ]]; then
    if [[ ! -r "${f}.pub" ]]; then
      Report_error "Missing '${f}.pub'"
      return 1
    fi
  else
    if [[ ! -r "${f}.pub" ]]; then
      f="${HOME}/.ssh/${f}"
    fi
    if [[ ! -r "${f}.pub" ]]; then
      Report_error "Missing '${f}.pub'"
      return 1
    fi
  fi
  local n=0
  n="$(wc -l "${f}.pub")"
  if [[ ${n} -gt 1 ]]; then
    ssh-keygen -i -f "${f}.pub" > "${f}-openssh.pub"
  else
    Report_warning "'${f}.pub' is already a single line - skipping"
    return 1
  fi
}

alias threagile='docker run --rm -it -v "$(pwd)":/app/work threagile/threagile'

function new() 
{
  NEWEST=~"/.newest"
  local e=0
  if [[ $# == 0 ]]; then
    # shellcheck disable=SC2154
    "${LOCAL}/bin/new"
  fi
  if [[ "$1" == "-e" ]]; then
    e=1
    shift
  fi
  if [[ $# -gt 0 ]]; then
    rm -f "${NEWEST}"
    if [[ ! ( "$*" =~ -[Pq] ) ]]; then
      echo "${LOCAL}/bin/new" "$@"
    fi
    # shellcheck disable=SC2312
    "${LOCAL}/bin/new" "$@" | tee "${NEWEST}"
  fi
  if [[ "${e}" == "1" && -r "${NEWEST}" ]]; then
    NEWF=$(perl -lane 'print $1 if m/^Created "([^"]+)"/'  "${NEWEST}")
    if [[ -r "${NEWF}" && ! -d "${NEWF}" ]]; then
      gvim -f "${NEWF}"
    fi
  fi
}


