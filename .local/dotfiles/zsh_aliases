function WL()
{
  # Returns the path of a file reported by command -V
  # -d returns the containing directory
  # shellcheck disable=SC2312
  local PERLSCRIPT='print qq{$1} if m{ (/\S+)$}'
  if [[ "$1" == "-d" ]]; then
    shift
    PERLSCRIPT='next unless m{ (/\S+)$}; $d=qq{$1}; $d=~s{/[^/]+$}{};print $d'
  fi
  builtin command -V "$@" 2>/dev/null | perl -lne "${PERLSCRIPT}"
}
function f()
{
  # Returns the path of a j(ump) command
  ( j "$@" ; realpath "." );
}
