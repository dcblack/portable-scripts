function Source()
{
  if [[ $# == 0 ]]; then
    printf 1>&2 "[1;93mWarning:[0m Syntax: Source FILE [ARGS...]\n"
    return 1
  fi
  FILE="$1"
  shift
  if [[ -x "${FILE}" && -f "${FILE}" ]]; then
    echo "source \"${FILE}\" $*"
    # shellcheck disable=SC1090
    source "${FILE}" "$@"
  else
    printf 1>&2 "[1;91mError: Not executable [0m'%s'\n" "${FILE}"
  fi
}  

function ViSrc()
{
  if [[ $# == 0 ]]; then
    printf 1>&2 "[1;93mWarning:[0m Syntax: ViSrc FILE [ARGS...]\n"
    return 1
  fi
  local FILE
  FILE="$(Realpath "$1")"
  shift
  echo "${VI} -f $* ${FILE}"
  "${VI}" -f "$@" "${FILE}"
  Source "${FILE}" "$@"
}

function viscr()
{
  # shellcheck disable=SC2154,SC2312
  ViSrc "$(Firstreal ~/"scripts/$1" "${LOCAL}/scripts/$1")";
}
