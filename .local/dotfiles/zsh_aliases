#-------------------------------------------------------------------------------
function Columns()
{
  # shellcheck disable=SC2312
  ( stty -a | /usr/bin/perl -lne 'if((m{columns ([[:digit:]]+)})or(m{([[:digit:]]+) columns})){print $1;last}' )
}
alias Cols=Columns

#-------------------------------------------------------------------------------
function Rows()
{
  # shellcheck disable=SC2312
  stty -a | /usr/bin/perl -lne 'if((m{rows ([[:digit:]]+)})or(m{([[:digit:]]+) rows})){print $1;last}'
}
alias Lines=Rows
